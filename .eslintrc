{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "chai-friendly/no-unused-expressions": 2,
    "comma-dangle": ["error", "never"],
    "consistent-return": 0,
    "func-names": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "no-bitwise": 0,
    "no-param-reassign": 0,
    "no-unused-expressions": 0
  }
}
